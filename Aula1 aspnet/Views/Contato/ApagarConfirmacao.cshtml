@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de apagar o Contato";
}

<div class="texte-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)  ?</h3>

</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar a Exclusão  </a>
<a class="btn btn-danger btn-block"  role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirma a Exclusão</a>
